generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum UserPlan {
  FREE
  PRO
  PREMIUM
}

enum FileAccess {
  PUBLIC
  PRIVATE
}

enum BlockPermission {
  VIEW
  EDIT
}

enum BlockType {
  PAGE
  TEXT
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
  avatars  Json?  @map("avatars") /// @type {UserAvatar}

  createdAt DateTime @default(now()) @map("created_at")

  plan  UserPlan    @default(FREE)
  files MediaFile[] @relation("UserFiles")

  ownedPages   Page[]       @relation("OwnedPages")
  pageAccesses PageAccess[]

  @@map("users")
}

model MediaFile {
  id           String     @id @default(uuid())
  bucket       String
  key          String
  originalName String     @map("original_name")
  mimeType     String     @map("mime_type")
  size         Int
  ownerId      String
  owner        User       @relation("UserFiles", fields: [ownerId], references: [id])
  access       FileAccess @default(PRIVATE)
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  @@index([ownerId])
  @@index([mimeType])
  @@map("media_files")
}

model Page {
  id        String       @id @default(uuid())
  order     Int          @default(1)
  title     String?
  ownerId   String       @map("owner_id")
  owner     User         @relation("OwnedPages", fields: [ownerId], references: [id])
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")
  accesses  PageAccess[]
  blocks    Block[]

  @@index([ownerId])
  @@map("pages")
}

model Block {
  id        String    @id @default(uuid())
  type      BlockType
  meta      Json?     @db.JsonB
  pageId    String?   @map("page_id")
  page      Page?     @relation(fields: [pageId], references: [id])
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  parentRelations BlockRelation[] @relation("ChildBlocks")
  childRelations  BlockRelation[] @relation("ParentBlocks")

  @@index([pageId])
  @@map("blocks")
}

model BlockRelation {
  id     String  @id @default(uuid())
  fromId String? @map("from")
  toId   String  @map("to")
  order  Int     @default(1)

  createdAt DateTime @default(now()) @map("created_at")

  parent Block? @relation("ParentBlocks", fields: [fromId], references: [id])
  child  Block  @relation("ChildBlocks", fields: [toId], references: [id])

  @@unique([fromId, toId])
  @@unique([fromId, order])
  @@unique([toId])
  @@index([fromId])
  @@index([toId])
  @@map("block_relations")
}

model PageAccess {
  id         String          @id @default(uuid())
  pageId     String          @map("page_id")
  page       Page            @relation(fields: [pageId], references: [id])
  userId     String          @map("user_id")
  user       User            @relation(fields: [userId], references: [id])
  permission BlockPermission @default(VIEW)
  isActive   Boolean         @default(true)
  expiresAt  DateTime?       @map("expires_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([pageId, userId])
  @@index([pageId])
  @@index([userId])
  @@index([expiresAt])
  @@index([isActive])
  @@map("page_accesses")
}
