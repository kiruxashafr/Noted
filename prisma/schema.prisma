generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum UserPlan {
  FREE
  PRO
  PREMIUM
}

enum FileAccess {
  PUBLIC
  PRIVATE
}

enum BlockPermission {
  VIEW
  EDIT
}

enum BlockType {
  PAGE
  TEXT
  PHOTO
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
  avatars  Json?  @map("avatars") /// @type {UserAvatar}

  createdAt DateTime @default(now()) @map("created_at")

  plan  UserPlan    @default(FREE)
  files MediaFile[] @relation("UserFiles")

  ownedBlocks   Block[]       @relation("OwnedBlocks")
  blockAccesses BlockAccess[]

  @@map("users")
}

model MediaFile {
  id           String     @id @default(uuid())
  bucket       String
  key          String
  originalName String     @map("original_name")
  mimeType     String     @map("mime_type")
  size         Int
  ownerId      String
  owner        User       @relation("UserFiles", fields: [ownerId], references: [id])
  access       FileAccess @default(PRIVATE)
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  @@index([ownerId])
  @@index([mimeType])
  @@map("media_files")
}

model Block {
  id              String          @id @default(uuid())
  type            BlockType
  title           String?
  meta            Json?           @db.JsonB
  ownerId         String?         @map("owner_id")
  owner           User?           @relation("OwnedBlocks", fields: [ownerId], references: [id])
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")
  accesses        BlockAccess[]
  parentRelations BlockRelation[] @relation("ChildBlocks")
  childRelations  BlockRelation[] @relation("ParentBlocks")

  @@index([ownerId])
  @@map("blocks")
}

model BlockRelation {
  id     String @id @default(uuid())
  fromId String @map("from")
  toId   String @map("to")
  order  Int    @default(1)

  createdAt DateTime @default(now()) @map("created_at")

  parent Block @relation("ParentBlocks", fields: [fromId], references: [id])
  child  Block @relation("ChildBlocks", fields: [toId], references: [id])

  @@unique([fromId, toId])
  @@index([fromId])
  @@index([toId])
  @@map("block_relations")
}

model BlockAccess {
  id         String          @id @default(uuid())
  blockId    String          @map("block_id")
  block      Block           @relation(fields: [blockId], references: [id])
  userId     String          @map("user_id")
  user       User            @relation(fields: [userId], references: [id])
  permission BlockPermission @default(VIEW)
  isActive   Boolean         @default(true)
  expiresAt  DateTime?       @map("expires_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([blockId, userId])
  @@index([blockId])
  @@index([userId])
  @@index([expiresAt])
  @@index([isActive])
  @@map("block_accesses")
}
